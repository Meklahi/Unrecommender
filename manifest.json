{
	"manifest_version": 2,

	"name": "Unrecommender",
	"description": "This extension removes YouTube recommendations which don't come from the channel you're watching.",
	"version": "1.0.1",

	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "Unrecommender"
	},
	"permissions": [
		"*://*.youtube.com/*"
	],
	"content_scripts": [
		{
			"matches": ["*://*.youtube.com/*"],
			"run_at": "document_idle",
			"js": ["jquery-3.2.1.min.js", "main.js"]
		}
	]
}